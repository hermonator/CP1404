BoxLayout:
    orientation: 'vertical'
    GridLayout:
        orientation: 'vertical'
        cols: 2
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                on_press: app.handle_increment(1)
                text: 'Up'
            Button:
                on_press: app.handle_increment(-1)
                text: 'Down'
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)
